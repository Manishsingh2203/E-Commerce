    <link rel="stylesheet" href="/css/styles.css">
    <%- layout('layouts/boilerplate') -%>
     <section class="track-order">
        <div class="container">
            <h1>Track Your Order</h1>
            <p>Enter your order ID below to check the status of your order.</p>
            
            <form id="trackOrderForm">
                <input type="text" id="orderID" placeholder="Enter your Order ID" required />
                <button type="submit" class="btn">Track Order</button>
            </form>

            <div id="orderStatus" class="status-box">
                <h2>Order Status:</h2>
                <p id="statusMessage"></p>
            </div>
        </div>
    </section>

   

    <script>
        document.getElementById("trackOrderForm").addEventListener("submit", function(event) {
            event.preventDefault();
            const orderID = document.getElementById("orderID").value;

            if (orderID === "123456") { 
                document.getElementById("statusMessage").innerText = "Your order is out for delivery! ðŸšš";
            } else {
                document.getElementById("statusMessage").innerText = "Order not found. Please check your Order ID.";
            }

            document.getElementById("orderStatus").style.display = "block";
        });
    </script>

</body>
