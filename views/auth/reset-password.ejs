<% layout('layouts/boilerplate') -%>

<div class="reset-password-container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-5 col-sm-8 col-10">
        <%- include('../partials/flash') %> 

        <div class="card p-4 shadow-lg rounded-lg">
            <h2 class="text-center mb-4 text-primary">Reset Password</h2>

            <% if (messages.error && messages.error.length > 0) { %>
                <p class="text-danger text-center"><%= messages.error[0] %></p>
            <% } %>

            <% if (messages.success && messages.success.length > 0) { %>
                <p class="text-success text-center"><%= messages.success[0] %></p>
            <% } %>

            <form action="/reset-password" method="POST">
                <input type="hidden" name="userId" value="<%= userId %>">

                <div class="mb-3">
                    <label class="form-label" for="password">New Password</label>
                    <input class="form-control" type="password" name="password" id="password" placeholder="Enter your new password" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="confirmPassword">Confirm Password</label>
                    <input class="form-control" type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm your new password" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Reset Password</button>
                <p style="color: black;" class="text-center mt-3">Remember your password? <a href="/login" class="text-primary">Login</a></p>
            </form>
        </div>
    </div>
</div>

<style>
    
    body {
     
        font-family: 'Arial', sans-serif;
        color: #fff;
    }

   
    .reset-password-container {
        max-width: 50%;
        padding: 20px;
        margin-top: -170px;
        margin-left: 220px;
    }

 
    .card {
        border-radius: 10px;
        border-color: #fff;
        background-color: #f8f9fa; 
        padding: 30px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); 
    }

    .card h2 {
        font-size: 32px;
        color: #333;
    }

    .form-label {
        font-weight: 600;
        font-size: 14px;
        color: #333;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 12px;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 12px;
        border-radius: 8px;
        font-size: 16px;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-primary:focus {
        outline: none;
    }

    .text-primary {
        color: #007bff;
    }

  
    .text-center a {
        color: #007bff;
        font-weight: 600;
    }

    .text-center a:hover {
        text-decoration: underline;
    }

   
    @media (max-width: 768px) {
        .reset-password-container {
            max-width: 80%;
            margin-top: -150px;
        }
    }

    @media (max-width: 576px) {
        .reset-password-container {
            max-width: 90%;
            margin-top: -120px;
        }

        .card {
            padding: 20px;
        }

        .card h2 {
            font-size: 24px;
        }
    }
</style>
