<% layout('layouts/boilerplate') -%>

<div class="otp-container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-5 col-sm-8 col-10">
        <%- include('../partials/flash') %> <!-- Includes flash messages -->

        <div class="card p-4 shadow-lg rounded-lg">
            <h2 class="text-center mb-4 ">Verify OTP</h2>

            <% if (messages.error && messages.error.length > 0) { %>
                <p class="text-danger text-center"><%= messages.error[0] %></p>
            <% } %>

            <% if (messages.success && messages.success.length > 0) { %>
                <p class="text-success text-center"><%= messages.success[0] %></p>
            <% } %>

            <form action="/verify-otp" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="email">Enter your Email:</label>
                    <input class="form-control" type="email" name="email" id="email" placeholder="Your email" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="otp">Enter OTP:</label>
                    <input class="form-control" type="text" name="otp" id="otp" placeholder="6-digit OTP" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Verify OTP</button>
            </form>
            
            <p style="color: black;" class="text-center mt-3">Didn't receive the OTP? <a href="/resend-otp" class="text-primary">Resend OTP</a></p>
        </div>
    </div>
</div>

