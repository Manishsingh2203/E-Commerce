<!DOCTYPE html>
<html lang="en">
<head>
    <title>Your Account</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
     <nav style="background-color: white;" class="navbar navbar-expand-lg ">
        <div class="container-fluid">
         <!-- Navbar Toggle Button (for Mobile) -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
    
            <!-- Navbar Items (Collapsible) -->
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <!-- Left Empty Space for Center Alignment -->
                <div class="flex-grow-1"></div>
                 
                <!-- Right-Aligned Logo -->
                <a class="navbar-brand ms-auto" href="/products">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTdqfrtvanWDhhAhe07PgTLwQDe2fiAohmyp1GKuVJbzC0wZr6zBDgQv5ZIYnmpfeBpqYI&usqp=CAU" 
                         alt="Logo" class="d-inline-block align-text-top rounded" 
                         style="width: 150px; height: 55px; object-fit: cover; margin-left: -1493px;">
                </a>
            </div>
        </div>
    </nav>

   
    <!-- Account Page -->
    <div class="container mt-5">
        <div class="account-container p-4 rounded shadow bg-white">
            <h1 class="text-center text-primary">Welcome, <%= currentUser.username %>!</h1>

            <!-- Account Details -->
            <div class="account-section mt-4">
                <h2>Account Details</h2>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Phone:</strong> <%= user.phone %></p>
            </div>

            <!-- Saved Addresses -->
            <div class="account-section">
                <h2>Saved Addresses</h2>
                <ul class="list-group">
                    <% user.addresses.forEach(address => { %>
                        <li class="list-group-item"><%= address %></li>
                    <% }) %>
                </ul>
            </div>

            <!-- Order History -->
            <div class="account-section">
                <h2>Order History</h2>
                <ul class="list-group">
                    <% user.orders.forEach(order => { %>
                        <li class="list-group-item">
                            <strong>Order #<%= order.id %></strong> - <%= order.item %> (<%= order.status %>)
                        </li>
                    <% }) %>
                </ul>
            </div>

            <div class="text-center mt-4">
                <a href="/edit-account" class="btn btn-warning px-4">Edit Account</a>
                <a href="/" class="btn btn-secondary px-4">Go Back</a>
            </div>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


<style>
body {
    font-family: Arial, sans-serif;
    background-color: #f5f5f5;
    color: #333;
}

.account-container {
    max-width: 800px;
    margin: 50px auto;
    padding: 20px;
    background: white;
    border-radius: 8px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h1 {
    font-size: 26px;
    font-weight: bold;
}

.account-section h2 {
    font-size: 20px;
    border-bottom: 2px solid #007bff;
    padding-bottom: 5px;
    margin-bottom: 15px;
}

.list-group-item {
    background: #eef1f5;
    border-radius: 5px;
    margin-bottom: 5px;
}

.btn {
    font-weight: bold;
    padding: 10px 20px;
}

.navbar{
    height: 50px;
}
</style>
