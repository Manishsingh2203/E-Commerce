<script>
  
  const observer = new IntersectionObserver((entries, observer) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible'); 
        observer.unobserve(entry.target);  
      }
    });
  }, {
    threshold: 0.5,
  });
  
  // Target all product cards
  document.querySelectorAll('.card').forEach(card => {
    observer.observe(card);  
  });
  
 document.addEventListener("DOMContentLoaded", () => {
    const track = document.querySelector(".carousel-track");
    const prevButton = document.querySelector(".prev-btn");
    const nextButton = document.querySelector(".next-btn");

    const slideWidth = track.querySelector("img").clientWidth + 10; 
    let currentIndex = 0;

    const moveToSlide = (index) => {
      track.style.transition = "transform 0.4s ease-in-out";
      track.style.transform = `translateX(-${slideWidth * index}px)`;
    };

    const autoMove = () => {
      currentIndex++;
      if (currentIndex >= track.children.length) {
        currentIndex = 0; // Loop back to the first image
      }
      moveToSlide(currentIndex);
    };

    // Start auto-moving the carousel every 1 second
    const autoMoveInterval = setInterval(autoMove, 1000);

   
    nextButton.addEventListener("click", () => {
      clearInterval(autoMoveInterval); 
      autoMove();
    });

    prevButton.addEventListener("click", () => {
      clearInterval(autoMoveInterval); 
      currentIndex--;
      if (currentIndex < 0) {
        currentIndex = track.children.length - 1; 
      }
      moveToSlide(currentIndex);
    });
  });

</script>

